<div class='col-md-3'>
  <!-- ユーザー情報 -->
  <%= render 'layouts/user_info.html.erb', user: @user %>
  
  <!-- 本の投稿画面 -->
  <%= render 'layouts/new_book.html.erb', book: @book %>
  
  <!-- ユーザーの一覧 -->

</div>

<div class='col-md-8 offset-md-1'>
  <h2>Users</h2>
  
  <table>
    <tr>
      <th>画像</th>
      <th>name</th>
      <th>show</th>
    </tr>
    <% @users.each do |user|%>
    <tr>
      <th>
          <%= image_tag user.get_profile_image(80,80) %>
      </th>
      <th>
        <%= user.name %>
      </th>
      <th>
        <%= link_to "Show", user_path(user.id) %>
      </th>
    </tr>
    <% end %>
  </table>
</div>