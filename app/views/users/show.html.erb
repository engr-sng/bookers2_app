<div class='col-md-3'>

  <!-- ユーザー情報 -->
  <%= render 'layouts/user_info.html.erb', user: @user %>

  <!-- 本の投稿画面 -->
  <%= render 'layouts/new_book.html.erb', book: @book %>

</div>

<!-- ユーザーが持っている本の一覧 -->

<div class='col-md-8 offset-md-1'>
  <h2>Books</h2>
  
  <table>
    <tr>
      <th>画像</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @user.books.each do |book|%>
    <tr>
      <th>
        <%= link_to user_path(book.user_id) do %>
          <%= image_tag book.user.get_profile_image(80,80) %>
        <% end %>
      </th>
      <th>
        <%= link_to book.title, book_path(book.id) %>
      </th>
      <th>
        <%= book.body %>
      </th>
    </tr>
    <% end %>
  </table>
</div>
