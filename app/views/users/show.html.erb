<h2>User info</h2>

<p>画像</p>
<p><%= image_tag @user.get_profile_image(100,100) %></p>
<p>name:<%= @user.name %></p>
<p>introduction:<%= @user.introduction %></p>

<%= link_to "プロフィールの編集",edit_user_path(@user.id) %>

<h2>New book</h2>
<p>Title</p>
<p>Opinion</p>
<p>createBook</p>

<h2>Books</h2>

<table>
  <tr>
    <th>画像</th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @user.books.each do |book|%>
  <tr>
    <th>
      <%= link_to user_path(book.user_id) do %>
        <%= image_tag book.user.get_profile_image(80,80) %>
      <% end %>
    </th>
    <th>
      <%= link_to book.title, book_path(book.id) %>
    </th>
    <th>
      <%= book.body %>
    </th>
  </tr>
  <% end %>
</table>