
<div class='mx-auto'>

  <h2>Editing Book</h2>
  
  <!-- 本のエラー情報 -->
  <%= render 'layouts/book_errors.html.erb', book: @book %>
  <!-- ここまで -->
  
  <%= form_with model: @book, url: book_path, method: :patch do |f| %>
  
    <div class="field">
      <label for="PatchTitle">Title</label><br>
      <%= f.text_field :title %>
    </div>
  
    <div class="field">
      <label for="PatchOpinion">Opinion</label><br>
      <%= f.text_area :body %>
    </div>
  
    <div class="actions">
      <%= f.submit "Update Book" %>
    </div>
  <% end %>
  
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>

</div>